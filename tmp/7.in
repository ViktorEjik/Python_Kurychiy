class C:
    def fun(self, arg, *args, kw="KW", **kwargs):
        return whocall(arg)
    lfun = lambda self, arg: whocall(arg)

def fun():
    return whocall(1) 

print(C().fun(0), C().lfun(0), fun())
print(C().fun(1), C().lfun(1))
print(C().fun(2, 3, 4, kw=123), C().lfun(2))
print(C().fun(3), C().lfun(42))
